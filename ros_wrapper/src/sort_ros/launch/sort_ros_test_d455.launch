<?xml version="1.0" encoding="utf-8"?>

<launch>

  <arg name="nodelet_manager" default="sort_ros_nodelet_manager" />
  <arg name="image_topic" default="/camera/infra1/image_rect_raw" />

  <node pkg="rosbag" type="play" name="player" output="screen" args="--clock /home/erl/repos/data/d455_one_way_demo.bag -q"/>
  
  <node name="republish_img" type="republish" pkg="image_transport" output="screen" args="compressed in:=/camera/infra1/image_rect_raw  raw out:=$(arg image_topic)" />
  <!-- <node name="republish_darknet_img" type="republish" pkg="image_transport" output="screen" args="compressed in:=/darknet_ros/detection_image  raw out:=/darknet_ros/detection_image" /> -->

  <include file="$(find darknet_ros)/launch/darknet_ros.launch" >
    <arg name="image" value="$(arg image_topic)" />
  </include>

</launch>